pipeline {
  agent any

  environment {
    DOCKER_IMAGE = "ghcr.io/paul-fridrick/portfolio"
    DOCKER_TAG = "${env.BUILD_NUMBER}"
    GITHUB_TOKEN = credentials('Github-Paul')
    CONTAINER_PORT = "3000"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install dependencies') {
      steps {
        sh 'rm -rf node_modules package-lock.json'
        sh 'npm install --no-package-lock --legacy-peer-deps'
      }
    }

    stage('Build Angular') {
      steps {
        sh 'npm run build'
      }
    }

    stage('Docker Build & Push') {
      steps {
        sh '''
          docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
          echo "${GITHUB_TOKEN}" | docker login ghcr.io -u Paul-Fridrick --password-stdin
          docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
        '''
      }
    }

    stage('Deploy Locally') {
      steps {
        sh '''
          echo "${GITHUB_TOKEN}" | docker login ghcr.io -u Paul-Fridrick --password-stdin
          docker pull ${DOCKER_IMAGE}:${DOCKER_TAG}
          docker stop portfolio || true
          docker rm portfolio || true
          docker run -d --name portfolio \
            --label "traefik.enable=true" \
            --label "traefik.http.routers.portfolio.rule=Host(`portfolio.pfsolutions.tech`)" \
            --label "traefik.http.routers.portfolio.entrypoints=websecure" \
            --label "traefik.http.routers.portfolio.tls.certresolver=myresolver" \
            --label "traefik.http.services.portfolio.loadbalancer.server.port=80" \
            ${DOCKER_IMAGE}:${DOCKER_TAG}
        '''
      }
    }
  }
}
